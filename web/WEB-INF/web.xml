<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AccountServlet</servlet-name>
        <servlet-class>fr.ensta.authenticator.AccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>fr.ensta.authenticator.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>fr.ensta.authenticator.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountServlet</servlet-name>
        <url-pattern>/account/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>accountInfo</servlet-name>
        <jsp-file>/AccountInfo.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>accountEdit</servlet-name>
        <jsp-file>/AccountEdit.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>accountEditValidation</servlet-name>
        <jsp-file>/AccountEditValidation.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>loginForm</servlet-name>
        <jsp-file>/Login.jsp</jsp-file>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
